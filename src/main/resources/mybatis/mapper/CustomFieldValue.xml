<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.mapper.CustomFieldValue">

    <resultMap id="customFieldValue" type="com.sevgmo.stationpassport.model.CustomFieldValue">
        <id property="id" column="customfieldsvalue_id"/>
        <result property="textValue" column="customfieldsvalue_text_value"/>
        <result property="intValue" column="customfieldsvalue_numeric_value"/>
        <association property="customField" column="customfieldsvalue_customfield_id" javaType="com.sevgmo.stationpassport.model.CustomField" select="mybatis.mapper.CustomField.getCustomFieldById"/>
        <association property="station" column="customfieldsvalue_station_id" javaType="com.sevgmo.stationpassport.model.Station" select="mybatis.mapper.Station.getStationNameById"/>
    </resultMap>

    <select id=" getCustomFieldValueByStationId" parameterType="java.lang.Integer" resultMap="customFieldValue">
        SELECT * FROM customfieldsvalues WHERE customfieldsvalue_station_id=#{id}
    </select>

</mapper>

